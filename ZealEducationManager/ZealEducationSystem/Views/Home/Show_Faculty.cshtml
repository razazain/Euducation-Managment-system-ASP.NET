@{
    ViewData["Title"] = "Show Faculty";
}
@model IEnumerable<Faculty>;
<div class="content-body">

    <div class="row page-titles mx-0">
        <div class="col p-md-0">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="javascript:void(0)">Dashboard</a></li>
                <li class="breadcrumb-item active"><a href="javascript:void(0)">Home</a></li>
            </ol>
        </div>
    </div>
    <!-- row -->

    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Data Table</h4>
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered zero-configuration">
                                <thead>
                                    <tr>
                                        <th>Faculty ID</th>
                                        <th>First Name</th>
                                        <th>Last Name</th>
                                        <th>Faculty Email</th>
                                        <th>Faculty Password</th>
                                        <th>Delete</th>
                                        <th>Edit</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach(var temp in Model)
                                    {
                                        <tr>
                                            <td>@temp.FacultyId</td>
                                            <td>@temp.FirstName</td>
                                            <td>@temp.LastName</td>
                                            <td>@temp.FacultyEmail</td>
                                            <td>@temp.FacultyPassword</td>
                                            <td>
                                                <button class="btn btn-primary">
                                                    <a class="text-light" asp-controller="Home" asp-action="Delete" asp-route-id="@temp.FacultyId">Delete</a>
                                                </button>
                                            </td>
                                            <td>
                                                <form method="post" asp-controller="Home" asp-action="Edit" asp-route-id="@temp.FacultyId">
                                                    <button type="submit" class="btn btn-primary text-light">Update</button>
                                                </form>
                                            </td>
                                        
                                        </tr>
                                    }
                                   
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>Faculty ID</th>
                                        <th>First Name</th>
                                        <th>Last Name</th>
                                        <th>Faculty Email</th>
                                        <th>Faculty Password</th>
                                        <th>Delete</th>
                                        <th>Edit</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- #/ container -->
</div>