@{
    ViewData["Title"] = "Show Course";
}

@model IEnumerable<Course>;
<div class="content-body">

    <div class="row page-titles mx-0">
        <div class="col p-md-0">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="javascript:void(0)">Dashboard</a></li>
                <li class="breadcrumb-item active"><a href="javascript:void(0)">Home</a></li>
            </ol>
        </div>
    </div>
    <!-- row -->

    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Data Table</h4>
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered zero-configuration">
                                <thead>
                                    <tr>
                                        <th>Course ID</th>
                                        <th>Course Code</th>
                                        <th>Course Name</th>
                                        <th>Course Description</th>
                                        <th>Course Fees</th>
                                        <th>Course Length</th>
                                        <th>Course Thumbnail</th>
                                        <th>Delete</th>
                                        <th>Edit</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var temp in Model)
                                    {
                                        <tr>
                                            <td>@temp.CourseId</td>
                                            <td>@temp.CourseCode</td>
                                            <td>@temp.CourseName</td>
                                            <td>@temp.CourseDescription</td>
                                            <td>@temp.CourseFees</td>
                                            <td>@temp.CourseLength</td>
                                            <td><img src="~/@temp.CourseThumbnail" height="50" width="50" alt="Student Image" /></td>
                                            <td>
                                                <button class="btn btn-primary">
                                                    <a class="text-light" asp-controller="Facultypanel" asp-action="CourseDelete" asp-route-id="@temp.CourseId">Delete</a>
                                                </button>
                                            </td>
                                            <td>
                                                <form method="post" asp-controller="Facultypanel" asp-action="CourseEdit" asp-route-id="@temp.CourseId">
                                                    <button type="submit" class="btn btn-primary text-light ">Update</button>
                                                </form>
                                            </td>
                                        </tr>
                                    }


                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>Course ID</th>
                                        <th>Course Code</th>
                                        <th>Course Name</th>
                                        <th>Course Fees</th>
                                        <th>Course Length</th>
                                        <th>Course Thumbnail</th>
                                        <th>Delete</th>
                                        <th>Edit</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- #/ container -->
</div>